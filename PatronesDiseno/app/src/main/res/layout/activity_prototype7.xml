<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/best_android_wallpaper"

    android:orientation="vertical"
    tools:context="mx.edu.utng.patronesdiseno.SingletonActivity1"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prototype Casa"
        android:layout_gravity="center"
        android:autoText="true"
        android:fontFamily="@string/abc_font_family_body_1_material"
        android:hint="@string/abc_font_family_body_1_material" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="tamano"
                android:id="@+id/edt_casaTamano" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="color"
                android:id="@+id/edt_casaColor"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ubicacion"
                android:id="@+id/edt_casaUbicacion"
                android:layout_marginBottom="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Material"
            android:id="@+id/edt_material"
            android:layout_marginBottom="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_clonar1"
                android:text="clonar"
                android:layout_marginBottom="20dp"
                />


            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/grv_casa"
                android:columnWidth="90dp"
                android:numColumns="auto_fit"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                ></GridView>



</LinearLayout>
