<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/best_android_wallpaper"

    android:orientation="vertical"
    tools:context="mx.edu.utng.patronesdiseno.SingletonActivity1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prototype bicicleta"
        android:layout_gravity="center"
        android:autoText="true"
        android:fontFamily="@string/abc_font_family_body_1_material"
        android:hint="@string/abc_font_family_body_1_material" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="marca bicicleta"
        android:id="@+id/edt_marcabici" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color bicicleta"
        android:id="@+id/edt_colorVisicle"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="N_serie"
        android:id="@+id/edt_n_serieBi"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rodada"
        android:id="@+id/edt_rodada"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clonarbicicle"
        android:text="clonar"
        android:layout_marginBottom="20dp"
        />


    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grv_bicicleta"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        ></GridView>

</LinearLayout>
