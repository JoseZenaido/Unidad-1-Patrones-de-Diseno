<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/best_android_wallpaper"
    tools:context="mx.edu.utng.patronesdiseno.SingletonActivity1"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="530dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Registrar Persona"
              android:layout_gravity="center"
              android:autoText="true"
              android:fontFamily="@string/abc_font_family_body_1_material"
              android:hint="@string/abc_font_family_body_1_material" />

          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Nombre:"
              android:layout_gravity="center"
              android:id="@+id/edt_nombre"/>

          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Edad:"
              android:id="@+id/edt_edad"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Peso:"
              android:id="@+id/edt_peso"
              />
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Estatura"
              android:id="@+id/edt_estatura"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enfermedad"
              android:id="@+id/edt_enfermedad"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Localizacion:"
              android:id="@+id/edt_localizacion"/>


          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/bt_registrar"
              android:text="Registrar_Persona"
              android:layout_gravity="center"/>


      </LinearLayout>
    </ScrollView>
</LinearLayout>
