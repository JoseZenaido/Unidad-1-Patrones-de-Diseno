<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/best_android_wallpaper"
    android:id="@+id/lay_state"
    android:orientation="vertical"
    tools:context="mx.edu.utng.patronesdiseno.SingletonActivity1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State Leon"
        android:layout_gravity="center"
        android:autoText="true"
        android:fontFamily="@string/abc_font_family_body_1_material"
        android:hint="@string/abc_font_family_body_1_material" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pescado"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_switch"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alimentame"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
